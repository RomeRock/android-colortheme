<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="buttonStyleMain" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:width">80sp</item>
        <item name="android:textSize">@dimen/boton_text_size</item>
        <item name="android:background">?colorPrimary</item>
    </style>
    <style name="currencyTextStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#343434</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/language_text_size</item>
        <item name="android:background">@color/centerDetect</item>
    </style>
    <style name="textLanguage" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="textValue" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#7E7E7E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="paddingsContainer">
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="tittleSettings">
        <item name="android:padding">@dimen/tittle_settings</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tittle_settings</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tittleSettingsSymbol">
        <item name="android:paddingTop">@dimen/tittle_settings_symbol</item>
        <item name="android:paddingBottom">@dimen/tittle_settings_symbol</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tittle_settings</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="pop_up_full_tittle">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="pop_up_change">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/border_boton</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="pop_up_full_boton1">
        <item name="android:textSize">@dimen/pop_up_full_content</item>
        <item name="android:layout_margin">@dimen/pop_up_full_boton_margin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="pop_up_full_boton2">
        <item name="android:textSize">@dimen/pop_up_full_content</item>
        <item name="android:layout_margin">@dimen/pop_up_full_boton_margin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/border_boton</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="Orange" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Pink" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

